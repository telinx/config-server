page {
  height: 100%;
}

.container {
  background: #f2f2f2;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.topic {
  width: 100%;
}

.mainImg {
  width: 100%;
}

.topic .desc {
  padding: 10rpx 30rpx;
  text-align: center;
  font-size: 26rpx;
  line-height: 40rpx;
  background-color: #fff;
}

.topic .selectedTitle {
  font-size: 35rpx;
  color: #333;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.topic .goodsList {
  width: 100%;
  background: #f2f2f2;
  padding-left:10rpx;
}
.topic .goodsList .item{
    background: #fff;
    margin-bottom: 10rpx;
    display: inline-block;
    margin-right: 10rpx;
}
.topic .goodsList .item image{
  width: 360rpx;
  height: 360rpx;
}
.topic .goodsList .item .itemName{
  width: 360rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  color: #1892d2;
}
.topic .goodsList .item .itemPrice{
  width: 360rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  color: #1892d2;
}
.topic .goodsList .item .itemPrice text{
  font-size: 24rpx;
}